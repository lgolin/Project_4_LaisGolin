<%-include('header')-%>

<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title pb-5">
      <h2 class="fw-bold">Login System</h2>
      <span>Log in for the existing user</span>
      <% if(locals.logout){ %>
      <div class="alter alert-success text-center">
        <%= logout %>
      </div>
      <% } %>
    </div>
    <form action="/route/login" method="POST">
      <div class="form-group">
        <input type="email" class="form-control" placeholder="email" name="email">
        <small class="form-text text-muted" id="register-text">Register email address</small>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="password">
      </div>
      <button type="submit" class="btn btn-secondary rounded-pi">Submit</button>
  </div>
</div>

<%-include('footer')-%>